<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tailwind + Flowbite Boilerplate</title>

    <!-- Tailwind CSS via CDN -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Flowbite plugin for Tailwind -->
    <script src="https://unpkg.com/flowbite@2.3.0/dist/flowbite.min.js"></script>

    <!-- Optionally configure Tailwind -->
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#1D4ED8',
                    },
                },
            },
        };
    </script>
</head>

<body class="bg-gray-50 text-gray-800 font-sans">

    <!-- Navbar Example -->
    <nav class="bg-white border-b border-gray-200 px-4 py-2.5">
        <div class="container mx-auto flex flex-wrap items-center justify-between">
            <a href="#" class="text-xl font-semibold text-primary">MySite</a>
            <button data-collapse-toggle="navbar" type="button"
                class="inline-flex items-center p-2 w-10 h-10 text-sm text-gray-500 rounded-lg md:hidden"
                aria-controls="navbar" aria-expanded="false">
                <span class="sr-only">Open main menu</span>
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M3 5h14M3 10h14M3 15h14" clip-rule="evenodd"></path>
                </svg>
            </button>

            <div class="hidden w-full md:block md:w-auto" id="navbar">
                <ul class="flex flex-col mt-4 md:flex-row md:space-x-8 md:mt-0">
                    <li><a href="#" class="block py-2 px-3 text-gray-700 hover:text-primary">Home</a></li>
                    <li><a href="#" class="block py-2 px-3 text-gray-700 hover:text-primary">About</a></li>
                    <li><a href="#" class="block py-2 px-3 text-gray-700 hover:text-primary">Contact</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="py-16 text-center">
        <h1 class="text-4xl font-bold text-gray-800">Welcome to Rafay's personal google drive!</h1>
        <p class="mt-4 text-gray-600">upload a file to see some magic!</p>
        <button type="button" onclick="showPopUp()"
            class="mt-6 inline-flex items-center px-5 py-2.5 text-white bg-primary hover:bg-blue-700 rounded-lg text-sm font-medium">
            Upload a file
        </button>
        <div
            class="pop-up hidden backdrop-blur fixed top-0 mt-[100px] left-0 h-screen w-screen items-center justify-center">
            <form action="/upload-file" method="post" enctype="multipart/form-data">
                <div class="flex items-center justify-center w-96">
                    <label for="dropzone-file"
                        class="flex flex-col items-center justify-center w-full h-64 border-2 border-gray-300 border-dashed rounded-lg cursor-pointer bg-gray-50 dark:hover:bg-gray-800 dark:bg-gray-700 hover:bg-gray-100 dark:border-gray-600 dark:hover:border-gray-500 dark:hover:bg-gray-600">
                        <div class="flex flex-col items-center justify-center pt-5 pb-6">
                            <svg class="w-8 h-8 mb-4 text-gray-500 dark:text-gray-400" aria-hidden="true"
                                xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 16">
                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M13 13h3a3 3 0 0 0 0-6h-.025A5.56 5.56 0 0 0 16 6.5 5.5 5.5 0 0 0 5.207 5.021C5.137 5.017 5.071 5 5 5a4 4 0 0 0 0 8h2.167M10 15V6m0 0L8 8m2-2 2 2" />
                            </svg>
                            <p class="mb-2 text-sm text-gray-500 dark:text-gray-400"><span class="font-semibold">Click
                                    to
                                    upload</span> or drag and drop</p>
                            <p class="text-xs text-gray-500 dark:text-gray-400">SVG, PNG, JPG or GIF (MAX. 800x400px)
                            </p>
                        </div>
                        <input id="dropzone-file" type="file" class="hidden" name="file" />
                    </label>
                </div>
                <button type="button"
                    class="mt-6 inline-flex items-center px-5 py-2.5 text-white bg-primary hover:bg-blue-700 rounded-lg text-sm font-medium">
                    Upload a file
                </button>
                <button type="button" onclick="hidePopUp()"
                    class="mt-6 inline-flex items-center px-5 py-2.5 text-white bg-primary hover:bg-blue-700 rounded-lg text-sm font-medium">
                    Close
                </button>
            </form>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-white border-t border-gray-200 text-center py-6">
        <p class="text-sm text-gray-500">Â© 2025 MySite. All rights reserved.</p>
    </footer>

    <script>

        function showPopUp() {
            document.querySelector('.pop-up').style.display = 'flex';
        }

        function hidePopUp() {
            document.querySelector('.pop-up').style.display = 'none';
        }

    </script>
</body>

</html>